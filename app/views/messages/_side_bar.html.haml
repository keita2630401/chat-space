.chat-side
 .side-bar__user
  .side-box
   %p.side-box__user-name
    = current_user.name
   %ul.side-box__right
    %li.side-box__edit
     =link_to new_group_path  do
      =icon('fas', 'edit')
    %li.side-box__new
     = link_to edit_user_path(current_user) do
      = icon('fas', 'cog', class: 'icon')

 .side-bar__groups-list
  - current_user.groups.each do |group|
   .group
    = link_to group_messages_path(group) do
     .group__name
      = group.name
     .group__message
      = group.show_last_message
   